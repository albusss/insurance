{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="d-flex h-100 align-items-center" style="background-image: linear-gradient(#6ab3ff, #191e62);">
    <div class="container">
        <h1 class="h3 mb-3 font-weight-normal text-center" style="color:#fff;">Please sign in</h1>
        <div class="row justify-content-md-center">
            <div class="col-md-4 p-4 rounded" style="background-color: #fff;">
                <form action="{{ path('login_check') }}" method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <div class="form-group">
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
                        <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}"
                        >
                    </div>

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <div class="form-group mt-5">
                        <button class="btn btn-primary btn-block" type="submit">
                            Sign in
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row justify-content-md-center p-4" style="font-size: 10px;">
            <div class="col-5 col-md-2"><a href="{{ path('app_forgot_password_request') }}" style="color:#fff;">Forgot your password?</a></div>
            <div class="col-7 col-md-3 text-right"><a href="/register" style="color:#fff;">Don't have an account? Sing up</a></div>
        </div>
    </div>
</div>
{% endblock %}